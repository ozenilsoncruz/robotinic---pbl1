// Variáveis globais
float x = 0;
float y = 0;
float angulo = 0;


int lerCor() {
    int valorLuz = Sensor(SENSOR_COR);

    if (valorLuz < 40) {
        return PRETO;
    }
    else if(valorLuz > 50 && valorLuz < 56){
         return VERMELHO;
    }
    else if (valorLuz >= 40 && valorLuz < 60) {
        return BRANCO;
    }
    else if (valorLuz >= 60) {
        return PRATA;
    }

    return -1;
}


